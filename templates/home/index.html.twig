{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div class="section">
		<div class="homePresentation">
			<h1>Home</h1>

			<br><br>
			<img src="{{asset('images/1.png')}}" alt="">
		</div>

	</div>

	<br>
	<h1>Les chambres</h1>
	<div class="chambres">

		{% for chambre in chambres %}

			<div class="card" style="width: 18rem;">
				{% for photo in chambre.photos %}
					<img src="{{asset('images/Chambres/'~ photo.reference)}}" class="card-img-top" alt="...">
				{% endfor %}
				<div class="card-body">
					<h5 class="card-title">{{ chambre.titre }}</h5>
					<p class="card-text">{{ chambre.descriptionCourte }}</p>
					<p class="card-text">{{ chambre.prixJournalier }}</p>
					<a href="{{path('app_chambre_index')}}" class="btn btn-primary">Go somewhere</a>
				</div>
			</div>

		{% endfor %}
	</div>

{% endblock %}
