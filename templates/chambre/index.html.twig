{% extends 'base.html.twig' %}

{% block title %}Chambre index
{% endblock %}

{% block body %}
	<br><br><br>
	<h1 class="text-center">Chambres</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Description_courte</th>
				<th>Description_longue</th>
				<th>Prix journalier</th>
				<th>Photo</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for chambre in chambres %}
				<tr>
					<td>{{ chambre.id }}</td>
					<td>{{ chambre.titre }}</td>
					<td>{{ chambre.descriptionCourte }}</td>
					<td>{{ chambre.descriptionLongue }}</td>
					<td>{{ chambre.prixJournalier }}</td>
					{# <td>{{ chambre.createAt ? chambre.createAt|date('Y-m-d H:i:s') : '' }}</td> #}
					<td>
						{% for photo in chambre.photos %}
							<img src="{{asset('images/Chambres/'~ photo.reference)}}" alt="" style='width:30%'>
						{% endfor %}
					</td>
					<td>
						<a href="{{ path('app_chambre_show', {'id': chambre.id}) }}" class="btn btn-success">show</a><br><br>
						<a href="{{ path('app_chambre_edit', {'id': chambre.id}) }}" class="btn btn-warning">edit</a>
						<br><br>
						<a href="{{ path('app_dateChoice', {'id': chambre.id}) }}" class="btn btn-dark">Reserver</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_chambre_new') }}" class="btn btn-info">Create new</a>
{% endblock %}
