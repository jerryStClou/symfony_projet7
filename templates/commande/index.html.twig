{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CommandeId</th>
                <th>Total</th>
                <th>Chambre</th>
                <th>User</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>Create_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.commandeId }}</td>
                <td>{{ commande.total }}</td>
                <td>{{ commande.chambre }}</td>
                <td>{{ commande.user }}</td>
                <td>{{ commande.startDate }}</td>
                <td>{{ commande.endDate }}</td>
                <td>{{ commande.createAt ? commande.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_commande_show', {'id': commande.id}) }}">show</a>
                    <a href="{{ path('app_commande_edit', {'id': commande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commande_new') }}">Create new</a>
{% endblock %}
