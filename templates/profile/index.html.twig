{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<h1>User index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>#</th>
				<th>Pseudo</th>
				<th>Prenom</th>
				<th>Nom</th>
				<th>Email</th>
				{# <th>Roles</th> #}
				<th>Civilite</th>
				{# <th>Create_at</th> #}
				{# <th>IsVerified</th> #}
				<th>Options</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.pseudo }}</td>
					<td>{{ user.prenom }}</td>
					<td>{{ user.nom }}</td>
					<td>{{ user.email }}</td>
					{# <td>{{ user.roles ? user.roles|json_encode : '' }}</td> #}
					<td>{{ user.civilite }}</td>
					{# <td>{{ user.createAt ? user.createAt|date('Y-m-d H:i:s') : '' }}</td> #}
					{# <td>{{ user.isVerified ? 'Yes' : 'No' }}</td> #}
					<td>
						<a href="{{ path('app_profile_show', {'id': user.id}) }}" class="btn btn-success">show</a>

						<a href="{{ path('app_profile_edit', {'id': user.id}) }}" class="btn btn-warning">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="11">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_profile_new') }}">Create new</a>
{% endblock %}
