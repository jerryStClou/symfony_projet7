{% extends 'base.html.twig' %}

{% block title %}Hello ReservationController!
{% endblock %}

{% block body %}

	<div>
		{{chambres.titre}}
		{{chambres.description_courte}}
		{{chambres.Description_longue}}
	</div>


	<br><br><br>
	<center>
		<div class="formCRUD">
			<h1>Reservation</h1>
			{{form_start(form)}}
			<span class='m-1'>{{form_row(form.startDate)}}</span>
			<span class='m-1'>{{form_row(form.endDate)}}</span>
			<button class="submitCRUDStyle">{{button_label|default('Send')}}</button>
			{{form_end(form)}}
		</div>
	</center>
{% endblock %}
