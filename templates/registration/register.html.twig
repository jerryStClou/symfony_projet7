{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<div class="formRegister container mt-5  p-5">
		<h1 class="text-center">Register</h1>

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm, {'attr': {'class': 'form'}}) }}

		{{ form_row(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
		{{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
		{{ form_row(registrationForm.pseudo, {'attr': {'class': 'form-control'}}) }}
		{{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}

		{# Assuming civilite is a choice field #}
		{{ form_row(registrationForm.civilite, {'attr': {'class': 'form-control'}}) }}

		{{ form_row(registrationForm.plainPassword, {
        'label': 'Password',
        'attr': {'class': 'form-control'}
    }) }}

		{{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}

		<button type="submit" class="btn btn-info">Register</button>

		{{ form_end(registrationForm) }}
	</div>


{% endblock %}
